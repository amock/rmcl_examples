<?xml version="1.0"?>
<launch>

<arg name="map" default="tray" description="map name. Choose between 'cube', 'cylinder', 'floor', 'sphere', 'tray', 'trays', 'avz'" />
<arg name="config" default="$(find-pkg-share rmcl_examples)/config/rmcl.yaml" description="path to config file. You can find examples at rmcl_examples/config" />
<arg name="gui" default="true" description="start preconfigured rviz. you can also use the 'rviz.launch' instead." />

<node pkg="rmcl_ros" exec="rmcl_localization_node" name="rmcl_rmcl" output="screen" >
    <param name="use_sim_time" value="true" />
    <param from="$(var config)" />
    <param name="map_server.map.source" value="$(find-pkg-share rmcl_examples_maps)/maps/$(var map).dae" />
</node>

<group if="$(var gui)">
  <node pkg="rviz2" exec="rviz2" name="rviz2" 
      args="-d $(find-pkg-share rmcl_examples)/rviz/rmcl_rmcl.rviz">
      <param name="use_sim_time" value="true" />
      <param name="rviz_mesh_tools_plugins.Map3D" value="$(find-pkg-share rmcl_examples_maps)/maps/$(var map).dae" />
  </node>
</group>

</launch>
<?xml version="1.0"?>
<launch>

<arg name="map" default="tray" description="map name. Choose between 'cube', 'cylinder', 'corridor', 'sphere', 'tray', 'trays', 'avz'" />
<arg name="config" default="$(find-pkg-share rmcl_examples_micpl)/config/rmcl_micpl_depth.yaml" description="path to config file. You can find examples at rmcl_examples/config" />
<arg name="gui" default="false" description="start preconfigured rviz. you can also use the 'rviz.launch' instead." />


<node pkg="rmcl_ros" exec="conv_pc2_to_o1dn_node" name="rmcl_depth_conversion" output="screen">
    <param name="use_sim_time" value="true" />
    <param from="$(var config)" />
    <remap from="cloud" to="/rgbd_camera/points"/>
    <remap from="rmcl_scan" to="/rmcl_inputs/rgbd_camera"/>
</node>

<node pkg="rmcl_ros" exec="micp_localization_node" name="micp_localization" output="screen">
  <param name="use_sim_time" value="true" />
  <param name="map_file" value="$(find-pkg-share rmcl_examples_maps)/maps/$(var map).dae" />
  <param from="$(var config)" />
</node>

<group if="$(var gui)">
  <node pkg="rviz2" exec="rviz2" name="rviz2" 
      args="-d $(find-pkg-share rmcl_examples_micpl)/rviz/rmcl_micpl_depth.rviz">
      <param name="use_sim_time" value="true" />
      <param name="rviz_mesh_tools_plugins.Map3D" value="$(find-pkg-share rmcl_examples_maps)/maps/$(var map).dae" />
  </node>
</group>

</launch>
